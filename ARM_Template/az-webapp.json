{
    "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "ServicePlan-Name": {
           "type": "string",
           "metadata": {
                "description": "Enter service plan name:"
            }
        },
        "WebApp-Name": {
           "type": "string",
           "metadata": {
                "description": "Enter Web app name:"
            }
        },
        "Sku": {
           "type": "string",
           "metadata": {
                "description": "Provide Sku value:"
            },
            "allowedValues": [  
                "B1",              
                "F1"
            ]
        }
    },
    "variables": {
       // "webapp-name": "[concat('valaxy-dev',uniqueString(resourceGroup().id))]"//
    },
    "resources": [
        {
            "name": "[parameters('ServicePlan-Name')]",
            "type": "Microsoft.Web/serverfarms",
            "apiVersion": "2018-02-01",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "[parameters('Sku')]",
                "capacity": 1
            },
            "tags": {
                "displayName": "[parameters('ServicePlan-Name')]"
            },
            "properties": {
                "name": "[parameters('ServicePlan-Name')]"
            }
        },
        {
            "name": "[parameters('webapp-name')]",
            "type": "Microsoft.Web/sites",
            "apiVersion": "2016-08-01",
            "location": "[resourceGroup().location]",
            "tags": {
                "[concat('hidden-related:', resourceGroup().id, '/providers/Microsoft.Web/serverfarms/appServicePlan1')]": "Resource",
                "displayName": "[parameters('webapp-name')]"
            },
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', parameters('ServicePlan-Name'))]"
            ],
            "properties": {
                "name": "[parameters('webapp-name')]",
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('ServicePlan-Name'))]"
            }
        }
    ],
    "outputs": {}
}